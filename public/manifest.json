{
  "name": "Quranic",
  "short_name": "Quranic",
  "description": "Listen to the Holy Quran on your device with beautiful recitations",
  "start_url": "/",
  "display": "standalone",
  "orientation": "portrait",
  "background_color": "#121212",
  "theme_color": "#4caf50",
  "categories": ["music", "religion", "education"],
  "lang": "en",
  "dir": "ltr",
  
  "icons": [
    {
      "src": "logo.png",
      "sizes": "192x192",
      "type": "image/png"
    },
    {
      "src": "logo.png",
      "sizes": "512x512",
      "type": "image/png"
    },
    {
      "src": "logo.png",
      "sizes": "144x144",
      "type": "image/png"
    },
    {
      "src": "logo.png",
      "sizes": "512x512",
      "type": "image/png"
    }
  ],
  
  "protocol_handlers": [
    {
      "protocol": "web+quranic",
      "url": "/?url=%s"
    }
  ],
  
  "display_override": ["window-controls-overlay", "minimal-ui"],
  
  "launch_handler": {
    "client_mode": "focus-existing"
  }
}